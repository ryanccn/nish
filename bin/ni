#!/bin/bash
set -euo pipefail

lib_path="$(dirname "$(dirname "${BASH_SOURCE[0]}")")/lib"

# shellcheck disable=SC1091
. "$lib_path/package_manager.sh"

if [ $# -lt 1 ]; then
  $PACKAGE_MANAGER install
else
  if [ "$PACKAGE_MANAGER" = "npm" ]; then
    "$PACKAGE_MANAGER" install "$1"
  else
    "$PACKAGE_MANAGER" add "$1"
  fi
fi
