#!/usr/bin/env bash
set -euo pipefail

lib_path="$(readlink -fn "$0" | xargs dirname)/lib"

# shellcheck disable=SC1091
source "$lib_path/package_manager.sh"

if [ $# -lt 1 ]; then
    "$PACKAGE_MANAGER" install
    exit 0
fi

if [ "$PACKAGE_MANAGER" = "npm" ]; then
    "$PACKAGE_MANAGER" install "$1"
    exit 0
fi

"$PACKAGE_MANAGER" add "$1"
