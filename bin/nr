#!/usr/bin/env bash
set -euo pipefail

lib_path="$(readlink -fn "$0" | xargs dirname | xargs dirname)/lib"

# shellcheck disable=SC1091
. "$lib_path/package_manager.sh"

scripts=""
[ -f package.json ] && scripts="$(jq -r '.scripts | keys | join(" ")' < package.json)"

chosen_script=""
[ $# -eq 0 ] && chosen_script="$(gum choose "$scripts")"

if [ "$chosen_script" != "" ]; then
    "$PACKAGE_MANAGER" run "$chosen_script"
    exit 0
fi

"$PACKAGE_MANAGER" run "$@"
